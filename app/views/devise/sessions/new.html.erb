        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
        <%= f.submit "Log in" %>
        <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label "Remember Me?" %>
        <% end -%>
      </div>
    <% end %>
  </div>
  <div class="deviselinks">
    <ul>
      <%= render "devise/shared/links" %>
    </ul>
  </div>
</body>
</html>




